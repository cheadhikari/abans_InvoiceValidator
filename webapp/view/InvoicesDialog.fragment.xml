<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="InvoicesDialog" title="{i18n>lblInvoices}">
		<VBox class="sapUiSmallMargin">
			<Table id="tabInvoices" growing="true" growingThreshold="20" growingScrollToLoad="true" sticky="ColumnHeaders" width="20em">
				<columns>
					<Column width="10em">
						<Text text="{i18n>lblInvoiceNo}"></Text>
					</Column>
					<Column width="10em" hAlign="End">
						<Text text="{i18n>lblNetAmount}"></Text>
					</Column>
				</columns>
			</Table>
		</VBox>
		<endButton>
			<Button text="{i18n>lblClose}" press="onCloseDialog"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>